#light.hspace100
.content
    .container.clearfix
        .col-1of1
            h3.head28 Forms
            p.text16
                | Basic field input styling for a sign-up or contact forms. Built to be 'light' and simple in appearance.
        .hspace40
        .col-1of2
            form.form(action='#', method='post')
                fieldset.fields
                    ol
                        li.string.required
                            label
                                | First name
                                abbr(title='required')
                                    sup *
                            input.field(type='text', maxlength='255', size='50')
                            p.rules The name people call you most.
                        li.string.required
                            label
                                | Last name
                                abbr(title='required')
                                    sup *
                            input.field(type='text', maxlength='255', size='50')
                            p.rules The name your coach called you.
                        li.text.required
                            label What brings you here?
                            textarea.field(cols='40', rows='10')
                            p.rules Write whatever you'd like.
                        li.date.required
                            fieldset.fields
                                legend.label
                                    label Birth Date
                                ol
                                    li
                                        select.field
                                            option(value='')
                                            option(selected='selected', value='1') January
                                            option(value='2') February
                                            option(value='3') March
                                            option(value='4') April
                                            option(value='5') May
                                            option(value='6') June
                                            option(value='7') July
                                            option(value='8') August
                                            option(value='9') September
                                            option(value='10') October
                                            option(value='11') November
                                            option(value='12') December
                                    li
                                        select.field
                                            option(value='')
                                            option(selected='selected', value='1') 1
                                            option(value='2') 2
                                            option(value='3') 3
                                            option(value='4') 4
                                            option(value='5') 5
                                            option(value='6') 6
                                            option(value='7') 7
                                            option(value='8') 8
                                            option(value='9') 9
                                            option(value='10') 10
                                            option(value='11') 11
                                            option(value='12') 12
                                            option(value='13') 13
                                            option(value='14') 14
                                            option(value='15') 15
                                            option(value='16') 16
                                            option(value='17') 17
                                            option(value='18') 18
                                            option(value='19') 19
                                            option(value='20') 20
                                            option(value='21') 21
                                            option(value='22') 22
                                            option(value='23') 23
                                            option(value='24') 24
                                            option(value='25') 25
                                            option(value='26') 26
                                            option(value='27') 27
                                            option(value='28') 28
                                            option(value='29') 29
                                            option(value='30') 30
                                            option(value='31') 31
                                    li
                                        select.field
                                            option(value='')
                                            option(selected='selected', value='2005') 2005
                                            option(value='2006') 2006
                                            option(value='2007') 2007
                                            option(value='2008') 2008
                                            option(value='2009') 2009
                                            option(value='2010') 2010
                                            option(value='2011') 2011
                                            option(value='2012') 2012
                                            option(value='2013') 2013
                                            option(value='2014') 2014
                                            option(value='2015') 2015
                        li.numeric.required
                            label
                                | Social Security Number
                                abbr(title='required')
                                    sup *
                            input.field(type='text', size='50')
                            p.rules
                                | Your <u>REAL</u> number. Don't be lying to us now.
                        li.numeric.required
                            label How much money is in your wallet?
                            input.field(type='text', size='50', value='$')
                            p.rules Pocket lint and buttons do not count.
                        li.select.required
                            label
                                | Have you ever had your identity stolen?
                                abbr(title='required')
                                    sup *
                            select.field
                                option(value='1') Yes
                                option(value='2') No
                                option(value='3') Maybe
                                option(value='4') Can't remember
                                option(value='5') I think it's happening right now
                                option(value='6') I have no identity to steal
                        li.select.optional
                            label How stupid are you?
                            select.field
                                option(value='')
                                option(value='1') Not much
                                option(value='2') Kinda
                                option(value='3') Huh?
                                option(value='4') Very
                                option(value='5') Certified idiot
                                option(value='6') I'm surprised I have a computer
                        li.radio.optional
                            fieldset.fields
                                legend Gender
                                ol
                                    li
                                        label
                                            input.field(type='radio', name='1', value='false')
                                            | Male
                                    li
                                        label
                                            input.field(type='radio', name='2', value='true')
                                            | Female
                        li.check_boxes.optional
                            fieldset.fields
                                legend Where can we search for money?
                                ol
                                    li
                                        label
                                            input.field(type='hidden', value='')
                                            input.field(type='checkbox', value='1')
                                            | Bank accounts
                                    li
                                        label
                                            input(type='hidden', value='')
                                            input.field(type='checkbox', value='2')
                                            | Mattress
                                    li
                                        label
                                            input(type='hidden', value='')
                                            input.field(type='checkbox', value='3')
                                            | Office safe
                                    li
                                        label
                                            input(type='hidden', name='3', value='')
                                            input.field(type='checkbox', value='4')
                                            | Couch cushions
                        li
                            fieldset.fields
                                ol
                                    li.commit
                                        input.btn.medium.gray.flat.round4(type='submit', value='Cancel')
                                    li.commit
                                        input.btn.medium.green.flat.round4(type='submit', value='Next Step')

        .col-1of2.last
            .well
                form.basic(action='#', method='post')
                    fieldset.fields
                        ol
                            li.string.required
                                label
                                    | Success
                                    abbr(title='required')
                                        sup *
                                input.field.success(type='text', maxlength='255', size='50')
                            li.string.required
                                label
                                    | Error
                                    abbr(title='required')
                                        sup *
                                input.field.error(type='text', maxlength='255', size='50')
                                p.rules.error Your username must consist of between 6 and 16 characters.
                            li.string.required
                                label.disabled Disabled
                                input.field.disabled(type='text', maxlength='255', size='50')
        .hspace60
